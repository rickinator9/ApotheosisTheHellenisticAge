hook_name = {
	expiration_days = 3650	# How long does it last? -1 or unset for no expiry
	strong = yes			# Is the hook considered strong? Strong hooks don't get used up; they're instead put on cooldown (unless script explicitly removes it)
	requires_secret = yes	# Does the hook need to have an associated secret?

	# Root is the character using the hook.
	# Scope:target is the character the hook is being used on.
	on_used = {
		<effect>
	}
}
